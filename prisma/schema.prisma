datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  name   String   @id
  record Record[]
}

model Record {
  title        String
  category     Category  @relation(fields: [categoryName], references: [name])
  slug         String    @id
  heroes       HoNHero[]
  time         String
  users        User[]
  categoryName String
}

model HoNHero {
  name    String   @id
  Records Record[]
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
  records  Record[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}
